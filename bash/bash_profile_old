if [ $? -eq 0 ]; then
    export PS1='[\u@\h] \[\e[0;44m\]\W/\[\e[0;32m\]$(__git_ps1 " (%s)")\e[0m\n>'
else
   export PS1='[\u@\h] \W%> '
